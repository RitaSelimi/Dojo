@model RegisterUser
@{
    Layout = "_LayoutAccess";
}

<div>
    <div class="main mt-2 pb-3">
        <div class="imgcontainer">
            <img src="images/Llogo_1.png" style="width: 200px; float: center; padding-bottom:20px;" class="avatar">
        </div>
        <form asp-action="Register2" asp-controller="Access" method="post" class="login-form">
            <div class="form-group">
                <label asp-for="FirstName" class="mb-2"></label>
                <span class="text-danger small" asp-validation-for="FirstName"></span>
                <input class="form-control rounded-left" asp-for="FirstName">
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="mb-2"></label>
                <span class="text-danger small" asp-validation-for="LastName"></span>
                <input class="form-control rounded-left" asp-for="LastName">
            </div>
            <div class="form-group">
                <label asp-for="Email" class="mb-2"></label>
                <span class="text-danger small" asp-validation-for="Email"></span>
                <input class="form-control rounded-left" asp-for="Email">
            </div>
            <div class="form-group">
                <label asp-for="Address" class="mb-2"></label>
                <span class="text-danger small" asp-validation-for="Address"></span>
                <input class="form-control rounded-left" asp-for="Address">
            </div>
            <div class="form-group">
                <label asp-for="City" class="mb-2"></label>
                <span class="text-danger small" asp-validation-for="City"></span>
                <input class="form-control rounded-left" asp-for="City">
            </div>
            <div class="form-group">
                <label asp-for="State" class="mb-2"></label>
                <span class="text-danger small" asp-validation-for="State"></span>
                <input class="form-control rounded-left" asp-for="State">
            </div>
            <div class="form-group">
                <label asp-for="Password" class="mb-2"></label>
                <span class="text-danger small" asp-validation-for="Password"></span>
                <input class="form-control rounded-left" asp-for="Password">
            </div>
            <div class="form-group">
                <label asp-for="Confirm" class="mb-2"></label>
                <input class="form-control rounded-left" asp-for="Confirm">
                <span class="text-danger small" asp-validation-for="Confirm"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="button" value="Register">
            </div>
        </form>
        <div class="text-center">
            <p class="mb-2"> Have an existing account? </p>
            <p><a asp-controller="Access" asp-action="Login" class="mb-5">Login</a></p>
        </div>
    </div>
</div>

<script src="js/jquery.min.js"></script>
<script src="js/popper.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/main.js"></script>
